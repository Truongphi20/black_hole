{
  "name": "C++ Dev with vcpkg",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "ms-vscode.makefile-tools"
      ]
    }
  },
  "remoteUser": "vscode",
  "runArgs": [
      "--env=DISPLAY",
      "--env=QT_X11_NO_MITSHM=1",
      "--volume=/tmp/.X11-unix:/tmp/.X11-unix"
  ]
}
